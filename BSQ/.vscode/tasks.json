{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build all C files (WSL)",
      "type": "shell",
      "command": "gcc",
      "args": ["-g", "*.c", "-o", "a.out"],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": ["$gcc"],
      "group": { "kind": "build", "isDefault": true }
    }
  ]
}